@import "nib"
@import "colors"

.block
  pointer-events none
  cursor not-allowed

.classifier
  position relative
  margin-top 2%
 

  .viewport
    padding-bottom: 10px
    -webkit-user-select none 
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none
    
    position: relative
    width: $subject-width
    height: $subject-height
    padding 0 0 10px 0
    cursor crosshair
    margin: 0 auto
    
    div.contours
      border 1px solid $dark-blue
      position absolute
      width $subject-width
      height $subject-height
    
    img
      position absolute
      transition opacity 200ms linear
      width $subject-width
      height $subject-height
      left: 1px
      top: 1px
      
      &.no-transition
        transition none
  
  .workflow
    user-select none
    color $workflow-text-color
    background-color $workflow-background
    border-radius 4px
    padding 0

    .toggle-contours, .tutorial
      background-image url('../images/hide-contours.png')
      background-repeat no-repeat
      background-position center center
      background-size: 80% 80%
      cursor pointer
      text-align center
      vertical-align middle
      font-size 12px
      line-height 12px
      position absolute
      width 50
      height 50
      right -65
      top 0
      border-radius: 50%
      
    .nocontours 
      background-image url('../images/show-contours.png')

    .tutorial
      top 65
      background-image url('../images/tutorial.svg')

    .row
      margin 0 auto
      width $subject-width

    .controls
      // border-top 1px solid rgb(130, 130, 130)
      // border-bottom 1px solid rgb(130, 130, 130)
      padding 6px 0 0 0
      
      .image-slider
        font-weight 700
        font-size 12px
        width $subject-width
        padding 5px 0 0 0
        
        p.band
          display inline-block
          cursor pointer
          
          &:hover
            color red
          
      input[type="range"]
        vertical-align 1px
        -webkit-appearance none
        background-color rgb(212, 212, 212)
        width 350px
        height 6px
        border-radius 3px
        margin 0 6px
        
      input[type="range"]::-webkit-slider-thumb
        -webkit-appearance none
        background-color rgb(11, 180, 236)
        border 1px solid rgb(87, 162, 187)
        width 12px
        height 12px
        border-radius 6px
        
      .message
        text-align right
        font-size 12px
    
    .instruction
      border-top 1px solid #003c57
      border-bottom 1px solid #003c57
      padding 15px 0
      width $subject-width
      margin 0 auto

      p
        margin 0
        text-align center
        font-size 18px
        text-shadow 0 1px 0 rgb(15, 15, 15)

    > .buttons
      padding: 10px 0
      width $subject-width
      margin 0 auto
      text-align right

    .cancel
      background-color #fb3a3a

      div
        padding-right 0
        padding-left 0
