@import "nib"

span.content-image
  margin-top: 40px
  overflow: hidden
  position: relative
  display: block
  height: 200px
  margin-bottom: 10px

	a
    color: rgb(239, 239, 239)
    text-decoration: none

img.science-image
  width: 470px
  z-index: 5
  position: relative

span.image-credit
  position: absolute
  display: block
  width: 100%
  height: 100%
  box-sizing: border-box
  top: 0
  text-align: right
  padding: 3px 3px 50px 3px
  font-size: 10px
  margin-bottom: 0
  z-index: 10
  background-image: linear-gradient(right, rgba(0,0,0,1.0), rgba(0,0,0,0.0))

span.content-image h2
  position: absolute
  display: block
  width: 100%
  bottom: 0
  padding-bottom: 0
  margin-bottom: 0
  padding-top: 50px
  padding-left: 10px
  z-index: 10
