@import "colors"
div.contours
  
  &.fade-contour
    svg
      g.contours
        opacity 0
  
  svg
    width 100%
    height 100%
    fill $selectedColor
    fill-opacity 0
    stroke $contourColor
    opacity 1

    rect
      stroke: none
      fill: none
   
    g.contours
      transition opacity 200ms linear
      
      g.contour-group
        path
          stroke-width 1.35px
          opacity 1
          
        &.selected
          path
            stroke $selectedColor
            fill-opacity 0.08
        &.matched
          display none
        &.pulsate
          opacity 1
          animation-name pulsate
          animation-duration 1.25s
          animation-timing-function ease-in-out
          animation-iteration-count 2
          
          path
            stroke $selectedColor
            fill-opacity 0.08
        
        &.pulsate-to-white
          opacity 1
          animation-name pulsate-to-white
          animation-duration 1.25s
          animation-timing-function ease-in-out
          animation-iteration-count 2
          stroke #FFF
    
    g.infrared
      g
        opacity 1
        
        circle
          fill #000
          stroke $circleColor 
          stroke-width 2px
          
          &.handle
            fill $selectedColor
            fill-opacity 1
            cursor pointer
            
          &.remove
            display none
            fill #000
            fill-opacity 1
            stroke none
            cursor pointer
            
        text
          font-size 8px
          display: none
          stroke #FFF
          pointer-events none
          
        &.hide
          opacity 0
        &.active
          circle
            &.annotation
              stroke $circleColor 
          text
            display block

  &.step-2, &.step-3
    svg
      g.contours
        g.contour-group
          &.selected, &.matched
            display block
            path
              display none
            path:first-child
              display block
              fill-opacity 0
              stroke-dasharray 5,5

  &.step-1, &.step-3
    svg
      g.contours
        g.contour-group
          pointer-events none
          display none

  &.step-1
    svg
      g.infrared
        circle.remove
          display: block

        text
          display: block

      g.contours
        g.contour-group
          &.selected
            display: block
            path
              display: block
              fill-opacity: 0
              stroke-opacity: 0.6

  
  &.step-0, &.step-1
    svg
      g.infrared
        g.matched
          display none
          
  &.step-3
    svg
      g.contours
        g.contour-group
          pointer-events none
          display none
          
          &.matched
            display block
            stroke $selectedColor
            opacity 0.8
            
      g.infrared
        g.matched
          circle.annotation
            stroke $blue 
            stroke-dasharray 5,5
          circle.handle
            display none
          circle.remove
            display none
          text
            display none
  
  &.strays
    svg
      g.infrared
        display none
      g.contours
        g.contour-group
          display block
          stroke $selectedColor
          animation-name pulsate
          animation-duration 1.25s
          animation-timing-function ease-in-out
          animation-iteration-count 2
          &.matched
            display none
          