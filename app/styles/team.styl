@import "nib"
@import "colors"

#team
  .bio
    width: 33%
    box-sizing: border-box
    padding: 10px
    display: inline-block
    vertical-align: top
    font-size: 14px
    line-height: 20px

    a
      color: $btn

@media (max-width: 1000px)
  #team
    .bio
      width: 100%
      display: block

