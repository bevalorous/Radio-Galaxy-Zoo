$subject-width = 500
$subject-height = 500

.svg-contour
  fill: none
  fill-opacity: 0
  fill: #000
  stroke: #FFF
  stroke-width: 2px
  
  &.selected
    stroke: #00FF00


.classifier
  position relative
  
  .viewport
    position relative
    width $subject-width
    height $subject-height
    padding-bottom 10px
    cursor crosshair
    
    // TODO: Make stylesheet for each directive?
    div.contours
      position absolute
      width $subject-width
      height $subject-height
      opacity 1
      
      transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
      
      &.fade
        opacity 0
      
      canvas.contour
        position absolute
        transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
        z-index 1
        
        &.deselect
          opacity 0
      
    img
      position absolute
  
  .ui
    position relative
  