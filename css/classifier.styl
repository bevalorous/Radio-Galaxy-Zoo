$subject-width = 424
$subject-height = 424

.block
  pointer-events none
  cursor not-allowed

.classifier
  position relative
  margin-top 2%
  
  .viewport
    user-select none
    position relative
    width $subject-width
    height $subject-height
    padding 0 0 10px 0
    cursor crosshair
    
    div.contours
      position absolute
      width $subject-width
      height $subject-height
    
    img
      position absolute
      transition opacity 200ms linear
      
      &.no-transition
        transition none
  
  .workflow
    user-select none
    color rgb(37, 52, 57)
    background-color rgb(237, 237, 237)
    border-radius 4px
    padding 2%
    margin-top -1%
    
    &:before
     content ""
     position absolute
     right 100%
     top 16%
     width 0
     height 0
     border-top 10px solid transparent
     border-right 10px solid rgb(237, 237, 237)
     border-bottom 10px solid transparent
     
    .controls
      border-bottom 1px solid #D3D3D3
      box-shadow inset 0 0 0 #FFF, 0 1px 0 #FFF
      
      .image-slider
        font-weight 700
        font-size 12px
        text-shadow 0 1px 0 #FAFAFA
        
        p.band
          display inline-block
          cursor pointer
          
          &:hover
            color red
          
      input[type="range"]
        vertical-align 1px
        -webkit-appearance none
        background-color rgb(212, 212, 212)
        width 65%
        height 6px
        border-radius 3px
        margin 0 6px
        
      input[type="range"]::-webkit-slider-thumb
        -webkit-appearance none
        background-color rgb(11, 180, 236)
        border 1px solid rgb(87, 162, 187)
        opacity 0.5
        width 12px
        height 12px
        border-radius 6px
      
      .toggle-contours
        cursor pointer
        text-align right
        color rgb(182, 182, 182)
        text-shadow 0 1px 0 #FAFAFA
        font-size 12px
        font-weight 200
        
        &:hover
          color red
        
      .message
        text-align right
        color rgb(182, 182, 182)
        text-shadow 0 1px 0 #FAFAFA
        font-size 12px
    
    .instruction
      margin 4% 0 0 0
      p
        margin 0
        text-align center
        font-size 20px
        font-weight 500
        text-shadow 0 1px 0 #FAFAFA
        color #253439
    
    .examples
      background-color rgb(212, 212, 212)
      margin 2% -4%
      padding 10px 30px 30px 30px
      box-shadow inset 0 1px 0 rgb(205, 205, 205), 0 1px 0 rgb(205, 205, 205)
      
      color #253439
      text-shadow 0 1px 0 #FAFAFA
      font-size 14px
      font-weight 200
      
      p
        font-weight 800
        margin-bottom 4px
      span
        cursor pointer
        font-size 12px
        
        &:first-child
          text-align left
          padding-right 0
        &:nth-child(2)
          text-align center
        &:last-child
          text-align right
        
        &:hover
          color red
        
        &.active
          text-decoration underline
      
      .content
        margin-top 20px
      
      img
        width 180px