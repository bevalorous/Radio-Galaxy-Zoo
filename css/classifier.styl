$subject-width = 500
$subject-height = 500

.svg-contour
  fill #000
  fill-opacity 0
  stroke #FFF
  stroke-width 2px
  
  &.selected
    stroke #00FF00

.dashed
  svg
    path
      stroke-dasharray 5,5 


g
  
  &.active
    circle
      stroke #00FF00
      &.remove
        stroke #FFFFFF
        display block
    text
      display block
    

circle
  fill #000
  fill-opacity 0
  stroke #FFFFFF
  stroke-width 2px
  cursor move
  
  &.handle
    fill #00FF00
    fill-opacity 1
    cursor pointer
  
  &.selected
    stroke #FAFAFA
  
  &.remove
    display none
    fill #FFFFFF
    fill-opacity 1
    stroke none
    cursor pointer

text
  display none
  font-size 11px
  stroke #FF0000
  fill #FF0000
  pointer-events none
  

.classifier
  position relative
  
  .viewport
    user-select none
    position relative
    width $subject-width
    height $subject-height
    padding-bottom 10px
    cursor crosshair
    
    // TODO: Make stylesheet for each directive?
    div.contours
      position absolute
      width $subject-width
      height $subject-height
      opacity 1
      
      transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
      
      &.fade
        opacity 0
      
      canvas.contour
        position absolute
        transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
        z-index 1
        
        &.deselect
          opacity 0
      
    img
      position absolute
  
  .ui
    position relative
  