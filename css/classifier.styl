$subject-width = 500
$subject-height = 500

.svg-contour
  
  fill #00FF00
  fill-opacity 0
  stroke #FFF
  
  &.selected
    stroke #00FF00
    fill-opacity 0.4
  
.dashed
  svg
    path
      stroke-dasharray 5,5
      &.selected
        fill-opacity 0

g
  &.active
    circle
      stroke #00FF00
      &.remove
        stroke #FFFFFF
        display block
    text
      display block
    

path
  stroke-width 1px

circle
  fill #000
  fill-opacity 0
  stroke #FFFFFF
  stroke-width 2px
  cursor move
  
  &.handle
    fill #00FF00
    fill-opacity 1
    cursor pointer
  
  &.selected
    stroke #FAFAFA
  
  &.remove
    display none
    fill #FFFFFF
    fill-opacity 1
    stroke none
    cursor pointer

text
  display none
  font-size 11px
  stroke #FF0000
  fill #FF0000
  pointer-events none
  

.classifier
  position relative
  
  .viewport
    user-select none
    position relative
    width $subject-width
    height $subject-height
    padding-bottom 10px
    cursor crosshair
    
    div.contours
      position absolute
      width $subject-width
      height $subject-height
      opacity 1
      
      transition opacity 200ms linear
      
      &.fade
        opacity 0
    
    img
      position absolute
  
  .workflow
    color #000
    background-color #FAFAFA
    height 380px
    margin-top 60px
    border-radius 5px
  