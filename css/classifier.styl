$subject-width = 421
$subject-height = 421

.classifier
  position relative
  
  .viewport
    position relative
    width $subject-width
    height $subject-height
    padding-bottom 10px
    cursor crosshair
    
    // TODO: Make stylesheet for each directive?
    div.contours
      position absolute
      width $subject-width
      height $subject-height
      
      transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
      
      &.hide
        opacity 0
      
      canvas.contour
        position absolute
        transition opacity 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
        z-index 1
        
        &.deselect
          opacity 0
      
    img
      position absolute
  
  .ui
    position relative
  