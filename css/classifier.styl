$subject-width = 424
$subject-height = 424
$workflow-background = rgb(0, 0, 0) $workflow-text-color = rgb(240, 240, 240) 
.block
  pointer-events none
  cursor not-allowed

.classifier
  position relative
  margin-top 2%
  
  .viewport
    padding-bottom: 10px
    user-select none
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    
    position relative
    width $subject-width
    height $subject-height
    padding 0 0 10px 0
    cursor crosshair
    
    div.contours
      position absolute
      width $subject-width
      height $subject-height
    
    img
      position absolute
      transition opacity 200ms linear
      
      &.no-transition
        transition none
  
  .workflow
    user-select none
    color $workflow-text-color
    background-color $workflow-background
    border-radius 4px
    padding 0

    > .row
      margin: 0
      padding: 0 15px

    .controls
      border-top 1px solid rgb(130, 130, 130)
      border-bottom 1px solid rgb(130, 130, 130)
      padding 6px 0 0 0
      
      .image-slider
        font-weight 700
        font-size 12px
        
        p.band
          display inline-block
          cursor pointer
          
          &:hover
            color red
          
      input[type="range"]
        vertical-align 1px
        -webkit-appearance none
        background-color rgb(212, 212, 212)
        width 65%
        height 6px
        border-radius 3px
        margin 0 6px
        
      input[type="range"]::-webkit-slider-thumb
        -webkit-appearance none
        background-color rgb(11, 180, 236)
        border 1px solid rgb(87, 162, 187)
        width 12px
        height 12px
        border-radius 6px
      
      .toggle-contours
        cursor pointer
        text-align right
        font-size 12px
        
        &:hover
          color white
        
      .message
        text-align right
        font-size 12px
    
    .instruction
      border-top 1px solid rgb(130, 130, 130)
      padding 15px 0

      p
        margin 0
        text-align center
        font-size 18px
        text-shadow 0 1px 0 rgb(15, 15, 15)
    
    > .buttons
      padding: 10px 0
      text-align right
      
      button
        animation-duration 2s
        animation-timing-function ease-in-out
        animation-iteration-count 2
        
        &.pulsate
          animation-name pulsate-75

  .examples
    background-color darken($workflow-background, 15%)
    padding-bottom 10px
    overflow: hidden
    height: 35px
    transition: height 0.5s ease-in-out
    margin-bottom: 20px
    
    text-shadow 0 1px 0 rgb(15, 15, 15)
    font-size 14px

    &.active
      height: 450px

      span.exit
        opacity: 1

    > .row
      padding 0

    p
      margin 0
      text-align: right

    span
      background lighten($workflow-background, 10%)
      cursor pointer
      text-align: center
      height 30px
      padding-left: 5px
      padding-right: 5px
      
      &:hover
        background lighten($workflow-background, 30%)
      
      &.active
        background lighten($workflow-background, 20%)

      &.exit
        opacity: 0
        transition: opacity 0.5s ease-in-out
        background: black
    
    .example-selection
      font-size 12px
      font-weight 800
      line-height 30px

    .content
      margin-top 12px
      min-height 226px
    
    img
      max-width 100%

    .example-list
      clearfix()
      margin 6px 0

      ul
        list-style none
        margin 0
        padding 0

        li
          float left
          padding 3px 7px

          &:hover
            background lighten($workflow-background, 30%)
            color white
            cursor pointer
          
          &.active
            background lighten($workflow-background, 20%)

    .example-box

      p
        font-size 13px
        margin 5px 0


