.content-block
  clearfix()

  .heading
    font-family "Open Sans Condensed", "Helvetica"
    font-weight 400
    font-size 32px
    line-height 55px
    color #efefef
    border-bottom 1px solid $dark-blue
    margin-bottom 10px
    
  .recents, .description
    font-family "Open Sans"
    font-weight 400
    line-height 20px
    color #efefef
    
    a
      text-transform uppercase
      text-decoration none
      font-weight bold
      
    img
      border 1px solid #003C57
      margin 12px 0 0 10px
      
      &.first
        margin-left 0px
        
    ul
      list-style none
      font-family "Open Sans", "Helvetica"
      font-weight 400
      font-size 12px
      line-height 20px
      color #efefef
      float left
      padding 0px
      margin 0px
      width $one-half
      
      li
        list-style none
        display block
        
        a
          text-align right
          float right
          text-transform uppercase
          font-weight 600
          text-decoration none
