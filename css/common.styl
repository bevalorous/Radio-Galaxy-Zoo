.col-centered
  float: none
  margin: 0 auto

h1,
h2,
h3
  border-bottom 1px solid $dark-blue
  color #efefef
  font-family "Open Sans Condensed", "Helvetica"
  line-height 1.45em
  margin-bottom 10px

h1
  font-size 2.2em

h2
  font-size 1.8em

h3
  font-size 1.6em

.content-block
  clearfix()
    
  .recents, .description
    font-family "Open Sans"
    font-weight 400
    line-height 20px
    color #efefef
    
    a
      text-transform uppercase
      text-decoration none
      font-weight bold
      
    img
      border 1px solid #003C57
      margin 12px 0 0 10px
      
      &.first
        margin-left 0px
        
    ul
      list-style none
      font-family "Open Sans", "Helvetica"
      font-weight 400
      font-size 12px
      line-height 20px
      color #efefef
      float left
      padding 0px
      margin 0px
      width $one-half
      
      li
        list-style none
        display block
        
        a
          text-align right
          float right
          text-transform uppercase
          font-weight 600
          text-decoration none
