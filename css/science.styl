div.science
	margin-top 40

span.content-image
	position relative
	display block
	height 200px
	margin-bottom 10px

	a
		color rgb(239, 239, 239)
		text-decoration none

img.science-image
	width 470
	z-index 5
	position relative

span.image-credit
	position absolute
	display block
	width 100%
	top 0
	text-align right
	padding 3 3 50 3
	font-size 10
	margin-bottom 0
	z-index 10
	background-image -webkit-gradient( linear, left top, left bottom, from( rgba(0,0,0,1.0) ), to( rgba(0,0,0,0.0) ) )
	background-image -moz-linear-gradient( rgba(0,0,0,1.0) 0%, rgba(0,0,0,0.0) 100% )
