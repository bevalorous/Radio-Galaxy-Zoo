
# All SVG styling
.svg-contour
  
  fill #000
  fill-opacity 0
  stroke #FFF
  
  &.selected
    stroke #00FF00
  
.dashed
  svg
    path
      stroke-dasharray 5,5 

g
  &.active
    circle
      stroke #00FF00
      &.remove
        stroke #FFFFFF
        display block
    text
      display block
    

path
  stroke-width 2px
  
  &.outer
    stroke-width 2px

circle
  fill #000
  fill-opacity 0
  stroke #FFFFFF
  stroke-width 2px
  cursor move
  
  &.handle
    fill #00FF00
    fill-opacity 1
    cursor pointer
  
  &.selected
    stroke #FAFAFA
  
  &.remove
    display none
    fill #FFFFFF
    fill-opacity 1
    stroke none
    cursor pointer

text
  display none
  font-size 11px
  stroke #FF0000
  fill #FF0000
  pointer-events none